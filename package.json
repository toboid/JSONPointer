{
  "name": "js-pointer",
  "version": "3.1.0",
  "description": "Tiny, spec compliant JSON Pointer RFC 6901 implementation.",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint 'lib/**' 'test/**'",
    "test": "nyc --check-coverage mocha ./test",
    "watch": "chokidar 'lib/*.js' 'test/*.js' -c 'npm run lint && npm test'",
    "ci": "npm run lint && npm run test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toboid/js-pointer.git"
  },
  "keywords": [
    "RFC6901",
    "json-pointer",
    "json-reference",
    "json-schema"
  ],
  "engines": {
    "node": ">= 6"
  },
  "author": "Toboid",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "chai": "^4.1.2",
    "chokidar-cli": "^1.2.2",
    "coveralls": "^3.0.3",
    "eslint": "^6.0.0",
    "eslint-config-toboid": "^2.0.0",
    "lodash": "^4.17.11",
    "mocha": "^6.1.3",
    "nyc": "^14.0.0"
  }
}
