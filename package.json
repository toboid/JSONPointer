{
  "name": "js-pointer",
  "version": "2.0.0",
  "description": "Tiny, spec compliant JSON Pointer RFC 6901 implementation.",
  "main": "dist/index.js",
  "scripts": {
    "precompile": "rm -f dist/*",
    "compile": "babel lib --out-dir dist",
    "coverage": "nyc --require babel-core/register --reporter=lcov mocha ./test && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "eslint 'lib/**' 'test/**'",
    "test": "nyc --check-coverage --require babel-core/register mocha ./test",
    "test-dist": "TEST_TARGET=dist mocha --require babel-core/register",
    "watch": "chokidar 'lib/*.js' 'test/*.js' -c 'npm run lint && npm test'",
    "ci": "npm run lint && npm run compile && npm run test-dist && npm run coverage",
    "prepublish": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/toboid/js-pointer.git"
  },
  "keywords": [
    "RFC6901",
    "json-pointer",
    "json-reference",
    "json-schema"
  ],
  "engines": {
    "node": ">=0.10.40"
  },
  "author": "Toboid",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.9.0",
    "lodash": "^4.8.2",
    "mocha": "^2.4.5",
    "nyc": "^6.4.0"
  },
  "standard": {
    "globals": [
      "describe",
      "it"
    ]
  }
}
